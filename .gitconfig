[user]
	email = rcaricio@newstore.com
	name = Rafael Caricio
	signingkey = 531B29F5
[color]
	ui = always
	status = auto
	branch = auto
	interactive = auto
	diff = auto
[alias]
	st = status
	co = "commit -S"
	com = "commit -S -m"
	purr = "pull --rebase"
	pom = "pull original master"
	task = "checkout -b"
	lg = "log --format='%Cgreen%h %Cred%cr %Creset%s %Cblue%cn'"
	ll = "log --format='%Cgreen%h %Cred%cr %Creset%s %Cblue%cn'"
	lgg = "log --graph --color --decorate"
	last = log -1 HEAD
[branch]
	autosetuprebase = always
	autosetupmerge = true
[credential]
	helper = osxkeychain
[core]
	editor = vim
	commentchar = &
[push]
	default = tracking
[gpg]
	program = gpg2
